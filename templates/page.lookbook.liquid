{% include 'bottom-logo' %}
<div class="page-width lookbook-content">
    <div class="grid">
        <div class="grid__item medium-up--five-sixths medium-up--push-one-twelfth">
            <div class="desktop">
                <div class="rte slick-single-item">
                    {{ pages.lookbook-desktop.content }}
                </div>
            </div>
            <div class="mobile">
                <div class="rte slick-single-item">
                    {{ pages.lookbook-mobile.content }}
                </div>
                <!-- <div class="subtext text-right"><span id="swipe-count">Swipe for next images</span></div> -->
                </div>
            {{ page.content }}
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {
        var swipe = $('.mobile .slick-single-item');

        swipe.slick({
            dots: false,
            infinite: true,
            speed: 500,
            fade: true,
            cssEase: 'linear',
            adaptiveHeight: false,
            arrows: false,
        });

        var imgs = $('.mobile .slick-single-item img');
        var count = imgs.length;
        $('#swipe-count').html(`${1}/${count}`);
        swipe.on('beforeChange', function (event, slick, currentSlide, nextSlide) {
            $('#swipe-count').html(`${nextSlide+1}/${count}`);
        });
    });

</script>

<style>
    .subtext {
        display: none;
        width: 100%;
        color: grey;
    }

    .mobile {
        display: none;
    }

    .desktop .rte {
        overflow: hidden;
    }

    .main-content {
        padding-top: 10px;
    }

    @media only screen and (max-width: 749px) {
        .mobile {
            display: block;
        }

        .desktop {
            display: none;
        }

        .subtext {
            display: block;
        }

        .slick-slide {
            margin-left: 0;
          	margin-bottom: 25px;
        }
    }
</style>
